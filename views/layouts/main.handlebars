  <div class="container">
    {{!-- Criando as flash messages --}}
    {{#if messages.message}}
      <div class="message">
        {{messages.message}}
      </div>
    {{/if}}
    {{{body}}}
  </div>

  <footer>
    <p><span>Pensadores</span> &copy;2023</p>
  </footer>
</body>
</html>
